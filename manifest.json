{
  "manifest_version": 3,
  "name": "Jotterly",
  "version": "1.0",
  "description": "A powerful note-taking Chrome extension.",
  "permissions": ["activeTab", "storage"],
  "options_page": "index.html",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
